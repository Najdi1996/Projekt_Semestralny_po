<Window x:Class="Projekt_programowanie_obiektowe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_programowanie_obiektowe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl HorizontalAlignment="Left" Height="408" Margin="10,10,0,0" VerticalAlignment="Top" Width="767">
       
        <TabItem Header="Choroby">
            <Grid x:Name="dbTab" Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="29*"/>
                    <ColumnDefinition Width="53*"/>
                    <ColumnDefinition Width="680*"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="grdChoroby" HorizontalAlignment="Left" Height="370" Margin="0,10,0,0" VerticalAlignment="Top" Width="400" Grid.ColumnSpan="3" MouseDoubleClick="grdChoroby_MouseDoubleClick" AutoGenerateColumns="False" SelectionChanged="grdChoroby_SelectionChanged_1" IsReadOnly="True" >
                    <DataGrid.ItemBindingGroup>
                        <BindingGroup/>
                    </DataGrid.ItemBindingGroup>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nr Choroby" Binding="{Binding nr_choroby}"/>
                        <DataGridTextColumn Binding="{Binding opis_choroby}"  Header="Opis Choroby"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBox x:Name="txtNrChoroby" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="2" Margin="499.4,14,0,0" RenderTransformOrigin="0.478,2.138" MaxLength="10" />
                <TextBox x:Name="txtOpisChoroby" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="2" Margin="499.4,58,0,0" RenderTransformOrigin="0.478,2.138" TextChanged="txtOpisChoroby_TextChanged"/>
                <Label Content="Nr Choroby" Grid.Column="2" HorizontalAlignment="Left" Margin="378.4,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.083,-5.124"/>
                <Label Content="Opis Choroby" Grid.Column="2" HorizontalAlignment="Left" Margin="378.4,58,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.083,-5.124"/>
                <Button x:Name="btnDeleteChoroba" Content="Usuń" Grid.Column="2" HorizontalAlignment="Left" Margin="357.4,130,0,0" VerticalAlignment="Top" Width="75" Click="btnDeleteChoroba_Click" IsEnabled="False"/>
                <Button x:Name="btnClearChoroba" Content="Wyczyść" Grid.Column="2" HorizontalAlignment="Left" Margin="456.4,130,0,0" VerticalAlignment="Top" Width="75" Click="btnClearChoroba_Click" />
                <Button x:Name="btnEditChoroba" Content="Popraw" Grid.Column="2" HorizontalAlignment="Left" Margin="357.4,187,0,0" VerticalAlignment="Top" Width="75" Click="btnEditChoroba_Click" IsEnabled="False"/>
                <Button x:Name="btnAddChoroba" Content="Dodaj" Grid.Column="2" HorizontalAlignment="Left" Margin="559.4,130,0,0" VerticalAlignment="Top" Width="75" Click="btnAddChoroba_Click"/>
            </Grid>
        </TabItem>
        <TabItem Header="Umawianie Wizyty">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>
</Window>
